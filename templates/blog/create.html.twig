{% extends 'base.html.twig' %}

{% block title %} New Blog! {% endblock %}

{% block content %}
    {% if form.vars.data is null %}
        <h1> Write a new blog </h1>
    {% else %}
        <h1> Update a blog </h1>
    {% endif %}
    <br>
    <div class="row">
        <div class="col-lg-6 panel panel-default">
            <div class="panel-body">
                {{ form(form) }}
            </div>
        </div>
    </div>
    <a href="{{ path('blogs_show_all') }}"> Go Back </a>
{% endblock %}